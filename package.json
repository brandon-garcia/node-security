    "name": "Brandon Garcia",
    "email": "bcgarcia44@gmail.com"
  },
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "test": "jest --detectOpenHandles"
  },
  "directories": {
    "lib": "."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brandon-garcia/node-security.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.+(ts|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/tests"
    ],
    "coverageReporters": [
      "text"
    ],
    "collectCoverage": true,
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/qrcode": "1.4.1",
    "@types/speakeasy": "2.0.6",
    "jest": "27.2.5",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "@bcg-ts/ts-toolkit": "7.0.0",
    "qrcode": "1.4.4",
    "speakeasy": "2.0.0"
  }
